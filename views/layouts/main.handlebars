<div class="container">
    <div class="row">
        <div>
            <h1>Eat Da Burger!!!</h1>
        </div>
        <div>
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div>
                        <pre>{{this.id}}. {{this.burger_name}}
                        </pre>
                    </div>
                    <div>
                        <form class="devour-form button-size">
                            <input class="burger_id" type="text" value={{this.id}}>
                            <button type="submit" class="btn btn-default">Devour it!</button>
                        </form>
                    </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{#this.id}} . {{#this.burger_name}}">
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div>
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter the burger you wish to eat!</p>
        </div>
    </div>

</div>